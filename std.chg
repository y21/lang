fn print<T>(s: T)
where
    T: fmt::Display
{
    let string = T::to_string(&s);
    let string = string.as_str();
    libc::write(1, ptr::cast(string.as_ptr()), string.len());
}

fn println<T>(s: T)
where
    T: fmt::Display
{
    print(s);
    print("\n");
}

fn fatal(s: str*) {
    println(s);
    libc::abort();
}
